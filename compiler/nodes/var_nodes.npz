import std;
unpack import "./node.npz";

class DeclareGlobalNode <- Node {
    let prv name;
    let prv val;
    let prv isConstant;

    build(oName, oVal, oIsConstant) {
        name = oName;
        val = oVal;
        isConstant = oIsConstant;

        type = NodeType.DECLARE_GLOBAL;
    }

    func getChildren() {
        return npvec.vec(val);
    }

    func pub getName() {
        return name;
    }

    func pub getConstant() {
        return isConstant;
    }

    func pub getValue() {
        return val;
    }

    func def string() {
        return "DeclareGlobal('" + name + 
            "', " + std.asString(val) + ")";
    }
}

